<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    android:background="@drawable/bg_color">


    <LinearLayout
        android:id="@+id/nav_host_fragment_content_refer_groups"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <TextView
            android:id="@+id/Accounts"
            android:layout_width="253dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Groups"
            android:layout_marginLeft="20dp"
            android:textColor="@color/white"
            android:textSize="30dp" />

        <ImageView
            android:layout_width="145dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:src="@drawable/logo3" />


    </LinearLayout>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="273dp"
        android:layout_marginTop="150dp">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="122dp"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/ic_baseline_hotel_24" />

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="143dp"
                android:layout_height="136dp"
                app:srcCompat="@drawable/ic_baseline_coffee_24" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="135dp"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/ic_baseline_lunch_dining_24" />

        </TableRow>

    </TableLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="300dp"
        android:layout_marginBottom="200dp">

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hotels"
            android:textColor="@color/white"
            android:textSize="20dp"
            />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="70dp"
            android:text="Coffee"
            android:textColor="@color/white"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="90dp"
            android:text="Lunch"
            android:textColor="@color/white"
            android:textSize="20dp" />
    </LinearLayout>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="350dp">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <ImageView
                android:id="@+id/imageView9"
                android:layout_width="130dp"
                android:layout_height="119dp"
                app:srcCompat="@drawable/ic_baseline_wine_bar_24" />

            <ImageView
                android:id="@+id/imageView8"
                android:layout_width="138dp"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/ic_baseline_airplanemode_active_24" />

            <ImageView
                android:id="@+id/imageView7"
                android:layout_width="143dp"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/ic_baseline_travel_explore_24" />
        </TableRow>

    </TableLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="480dp"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="200dp">

        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Brew Pubs"
            android:textColor="@color/white"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="60dp"
            android:text="Travel"
            android:textColor="@color/white"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/textView11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="80dp"
            android:text="Discover"
            android:textColor="@color/white"
            android:textSize="20dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="550dp"
        android:layout_marginBottom="130dp">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/back"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="240dp"
            android:layout_marginLeft="20dp"
            android:text="Back"
            android:textColor="@color/white"
            android:background="@drawable/btn_black"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/hotels"
            android:layout_width="140dp"
            android:layout_height="135dp"
            android:layout_marginTop="170dp"
            android:background="#00000000" />
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>